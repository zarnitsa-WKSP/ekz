#include <iostream>
#include <vector>

using namespace std;

int main() {
    int n, d;
    cin >> n >> d;
    
    vector<long long> P(n);
    long long l = 0;
    long long r = 0;
    
    for (int i = 0; i < n; i++) {
        cin >> P[i];
        r += P[i];
        if (P[i] > l) l = P[i];
    }
    
    long long ans = r;
    while (l <= r) {
        long long m = l + (r - l) / 2;
        long long c = 1;
        long long cur1 = 0;
        long long cur2 = 0;
        
        for (int i = 0; i < n; i++) {
            if (cur1 + P[i] <= m) {
                cur1 += P[i];
            } 
            
            else {
                if (cur1 < m) {
                    long long rem = P[i] - (m - cur1);
                    if (cur2 + rem <= m) {
                        cur1 = m;
                        cur2 += rem;
                    } 
                    else {
                        c++;
                        cur1 = P[i];
                        cur2 = 0;
                    }
                } 
                else {
                    if (cur2 + P[i] <= m) {
                        cur2 += P[i];
                    } 
                    else {
                        c++;
                        cur1 = P[i];
                        cur2 = 0;
                    }
                }
            }
        }
        
        if (c <= d) {
            ans = m;
            r = m - 1;
        } else {
            l = m + 1;
        }
    }
    
    cout << ans;
}
