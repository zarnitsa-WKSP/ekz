#include<iostream>
#include <vector>

using namespace std;

int main() {
    int n, k;
    cin>>n>>k;
    
    vector <int> A(n);
    
    for (int i=0; i<n; i++){
        cin>>A[i];
    }
    
    for (int i=0; i < n-1; i++){
        int mi = i;
        for (int j=i; j < n; j++){
            if (A[j] < A[mi]) mi=j;
        }
        swap (A[i], A[mi]);
    }
    
    int ans = 999999999;
    
    for (int i=0; i <= n - k; i++){
        int r = A[i+k-1] - A[i];
        if (r < ans) ans = r;
    }
    cout<<ans;
}
