#include<iostream>
#include <vector>
using namespace std;

int main() {
    int d, n;
    cin >> d >> n;
   
    vector<long long> P(n);
   
    long long r = 0;
    long long l = 0;
    for (int i = 0; i < n; i++) {
        cin >> P[i];
        r += P[i];
        if (P[i] > l) l = P[i];
    }
   
    long long ans = r;
    while (l <= r) {
        long long c = 1;
        long long cur = 0;
        long long m = l + (r - l) / 2;
       
        for (long long i = 0; i < n; i++) {
            if (cur + P[i] <= m) cur += P[i];
           
            else {
                c++;
                cur = P[i];
            }
        }
        
        if (c <= d) {
            ans = m;
            r = m - 1;
        } else {
            l = m + 1;
        }
    }
    cout << ans << endl;
}
