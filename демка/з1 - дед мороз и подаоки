#include<iostream>
#include <vector>

using namespace std;

int main(){
    int n, m;
    cin>>n>>m;
    
    vector <int> C(n);
    vector <int> P(m);
    
    for (int i=0; i<n; i++){
        cin>>C[i];
    }
    for (int i=0; i<m; i++){
        cin>>P[i];
    }
    
    //sort(C.begin(), C.end());
    
    for (int i=0; i<n-1 ; i++){
        int mi = i;
        for (int j=i+1; j<n; j++){
            if (C[j] < C[mi]) mi=j;
        }
        swap (C[i], C[mi]);
    }
    
    for (int i=0; i<m-1 ; i++){
        int mi = i;
        for (int j=i+1; j<m; j++){
            if (P[j] < P[mi]) mi=j;
        }
        swap (P[i], P[mi]);
    }
    
    int i = 0, j = 0, c = 0;
    while (i < n && j < m) {
        if (P[j] >= C[i]) {
            c++;
            i++;
        }
        j++;
    }
    cout<<c;
}
